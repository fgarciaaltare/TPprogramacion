<!DOCTYPE html>
<html lang="es">
  <!-- Include Head -->
  <%- include('partials/head') %>

  <body>
    <!-- Header -->
    <%- include('partials/header') %>
    <!-- /Header -->

    <!-- product detail -->
    <div class="container products-wrapper">
      <div class="d-flex align-items-center">
        <h2 class="products-title">
			<%= producto.nombre_producto %>
        </h2>
        <p class="product-detail-description">
          <a href="/product/product-add">Editar</a>
        </p>
      </div>

      <div class="product-detail">
        <div class="row">
          <article class="col-12 col-lg-8 product-detail-info">
            <!-- Imagen del producto -->
			<img src="<%= producto.nombre_imagen %>">

            
            <!-- Descripción -->
            <p class="product-detail-description">
              <%= producto.descripcion %>
            </p>
          </article>

          <div class="col-12 col-lg-4">
            <section class="comments">
              <% for (let i = 0; i < producto.comentarios.length; i++) { %>
                <article>
                  <div class="data">
                    <p class="user">
                      <strong>
                        <a href="/users/profile/<%= producto.comentarios[i].usuario.id %>">
                          <%= producto.comentarios[i].usuario.nombre %>
                        </a>
                      </strong>
                      <br>
                      <%= producto.comentarios[i].comentario %>
                    </p>
                  </div>
                </article>
              <% } %>
              <% if (producto.comentarios.length === 0) { %>
                <p>No hay comentarios por ahora.</p>
              <% } %>
            </section>
            <!-- Formulario para agregar comentario -->
            <% if (usuarioLogueado) { %>
              <form class="form" action="/product/<%= producto.id %>/comentario" method="POST">
                <input class="form-input" type="text" name="comentario" placeholder="Agregar comentario" required />
                <button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
              </form>
            <% } else { %>
              <p><a href="/users/login">Iniciá sesión para comentar</a></p>
            <% } %>
          </div>
    <!-- /product detail -->

    <!-- footer -->
    <%- include('partials/footer') %>
    <!-- /footer -->
  </body>
</html>

	</body>

</html>