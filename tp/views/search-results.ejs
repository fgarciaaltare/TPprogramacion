<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('partials/head') %>

<body>
	<!-- Header -->
	<%- include('partials/header') %>
	<!-- /Header -->

	<!-- Novedades -->
	
<div class="container products-wrapper">
  <div class="row">
    <div class="col-12">
      <h2 class="products-title">Resultados de b√∫squeda</h2>
      <h3 class="products-title">Resultados para: "<%= busqueda %>"</h3>
    </div>

    <% if (productos.length > 0) { %>
      <% productos.forEach(producto => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <a href="#">
              <img src="<%= producto.imagen %>" class="card-img-top" alt="Imagen del producto">
            </a>
            <div class="card-body">
              <h5 class="card-title"><%= producto.nombre %></h5>
              <p class="card-text"><%= producto.descripcion %></p>
              <p class="card-text">Comentarios: <%= producto.comentarios.length %></p>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-12">
        <p>No se encontraron resultados para "<%= busqueda %>".</p>
      </div>
    <% } %>
  </div>
</div>


	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>

</html>



