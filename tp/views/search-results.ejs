<!DOCTYPE html>
<html lang="es">
<%- include('partials/head') %>

<body>
  <%- include('partials/header') %>

  <div class="container products-wrapper">
    <div class="row">
      <div class="col-12">
        <h2 class="products-title">Resultados de búsqueda</h2>
      </div>

      <% if (productos.length === 0) { %>
        <div class="col-12">
          <p >No hay resultados para su criterio de búsqueda.</p>
        </div>
      <% } %>

      <% for (let i = 0; i < productos.length; i++) { %>
        <div class="col-12 col-sm-6 col-lg-3">
          <section class="product-box">
            <a href="/product/detalle/<%= productos[i].id %>">
              <figure class="product-box_image">
                <img src="/images/products/<%= productos[i].nombre_imagen %>" alt="<%= productos[i].nombre_producto %>">

              </figure>
              <article class="product-box_data">
                <h2><%= productos[i].nombre_producto%></h2>
                <p><%= productos[i].descripcion %></p>
                <% if (productos[i].usuario) { %>
                  <p>Publicado por:
                    <a href="/users/profile/<%= productos[i].usuarios.id %>">
                      <%= productos[i].usuario.email %>
                    </a>
                  </p>
                <% } %>
              </article>
            </a>
          </section>
        </div>
      <% } %>
    </div>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
