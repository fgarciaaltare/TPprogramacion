<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>
	<!-- Header -->
	<%- include('partials/header', { user: usuario }) %>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%=foto %>" alt="Foto de perfil" class="foto-perfil" width="150">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= usuario.email %> 
						<a href="profile-edit.html">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				
				<p class="mt-2">Email: <%= email %></p>


				<div>
					<ul class="">
						<li>8 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<!-- Novedades -->
<div class="container products-wrapper">
	<div class="row">
	  <div class="col-12">
		<h2 class="products-title">mis Productos</h2>
	  </div>
	  <!-- Show the "ultimos" products -->
  
  
	  <% for( let i = 0; i < productos.length; i++ ) { %>
		<div class="col-12 col-sm-6 col-lg-3">
		  <section class="product-box">
			<a href="/product/detalle/<%= productos[i].id %>">
			  <figure class="product-box_image">
				<img src="<%= productos[i].imagen%>" alt="">
			  </figure>
			  <article class="product-box_data">
				<h2><%=productos[i].nombre%></h2>
				<p><%=productos[i].descripcion%></p>
				<p>comentarios:<%=productos[i].comentarios.length%></p>
			  </article>
			</a>
		  </section>
		</div>
	  <% } %>
  
  
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>